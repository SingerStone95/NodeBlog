<script type="text/javascript">

//markdowm

var testEditor;

$(function() {
    testEditor = editormd("test-editormd", {
        width   : "90%",
        height  : 640,
        syncScrolling : "single",
        path    : "lib/"
    });


});


window.onload=function(){ 
 for(var i=0;i<document.getElementById("classify").options.length;i++){
        if(document.getElementById("classify").options[i].text =="<%= allResult.classify %>"){
            document.getElementById("classify").options[i].selected=true;     
        }
    }
};

    $(document).ready(function () {
        $("#update").click(function () {
            //var content = UE.getEditor('editor').getContent();
            var content=testEditor.getMarkdown();
            var classify= $('#classify').find("option:selected").text();
            $.post("/update", {
                "ID":"<%= allResult.ID %>",
                "topic" : $("#topic").val(),
                "publisher" : $("#publisher").val(),
                "classify" : classify,
                "visitNum":<%= allResult.visitNum %>,
                "thumbsUp":<%= allResult.thumbsUp %>,
                "content" : content
            }, function (result) {
                if(result == 1){
                    alert("修改文章成功！将跳转首页查看");
                    window.location.href = "/";
                }else if(result == -1){
                    alert("服务器错误！请检查服务器");
                }else{
                    alert("未知原因，修改文章失败！");
                }
            });
        });
    });
</script>

